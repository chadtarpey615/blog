<p id="notice"><%= notice %></p>
<div class="jumbotron">

  <h1 class="display-4">

    <%= @friend.first_name %>
    <%= @friend.last_name %>

  </h1>



  <p class="lead">
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>
  <button class="btn btn-secondary">

    <%= link_to 'Edit', edit_friend_path(@friend) %>
  </button>

  <button class="btn btn-info">

    <%= link_to 'Back', friends_path %>
  </button>
</div>